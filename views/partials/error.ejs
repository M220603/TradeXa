<div style="text-align: center; padding: 20px; border-radius: 8px; background-color: #f8f9fa; color: #0056b3;">
    <h2><%= message %></h2>

    <% if (typeof redirectTo !== 'undefined' && typeof actionText !== 'undefined') { %>
        <a href="<%= redirectTo %>" 
           style="display: inline-block; margin-top: 15px; padding: 10px 20px; background-color: #0056b3; color: white; text-decoration: none; border-radius: 5px;">
            <%= actionText %>
        </a>
    <% } %>
</div>
